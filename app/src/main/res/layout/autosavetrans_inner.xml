<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/AutoSaveTrans_L_id"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:layout_margin="3dip"
        android:layout_weight="1"
        android:background="#9C27B0"
        android:ellipsize="end"
        android:foregroundGravity="center"
        android:maxLines="1"
        android:minWidth="60sp"
        android:maxWidth="60sp"
        android:padding="2dp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:id="@+id/AutoSaveTrans_R_id"
        android:layout_weight="1"
        android:foregroundGravity="center"
        android:textSize="18sp"

        android:layout_margin="3dip"
        android:background="#9C27B0"
        android:textColor="#FFFFFF"
        android:padding="2dp"
        android:ellipsize="middle"
        android:minWidth = "100sp"
        android:maxWidth="100sp"
        android:textAlignment="textEnd"
        android:singleLine="true" />

    <TextView
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:id="@+id/AutoSaveTrans_Create_TS"
        android:layout_weight="1"
        android:foregroundGravity="center"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_margin="3dip"
        android:background="#9C27B0"
        android:textColor="#FFFFFF"
        android:padding="2dp"
        android:maxLines="1"
        android:minWidth="250sp"
        android:maxWidth="250sp"
        android:ellipsize="end"
        />

    <TextView
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:id="@+id/AutoSaveTrans_Load_Val"
        android:layout_weight="1"
        android:foregroundGravity="center"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_margin="3dip"
        android:background="#9C27B0"
        android:textColor="#FFFFFF"
        android:padding="2dp"
        android:minWidth="300sp"
        android:maxWidth="300sp"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:id="@+id/AutoSaveTrans_Type"
        android:layout_weight="1"
        android:foregroundGravity="center"
        android:textSize="18sp"
        android:textAlignment="textEnd"
        android:layout_margin="3dip"
        android:background="#9C27B0"
        android:minWidth="100sp"
        android:maxWidth="100sp"
        android:textColor="#FFFFFF"
        android:padding="2dp"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:id="@+id/AutoSaveTrans_Mapped_ID"
        android:layout_weight="1"
        android:foregroundGravity="center"
        android:textSize="18sp"
        android:textAlignment="textEnd"
        android:layout_margin="3dip"
        android:background="#9C27B0"
        android:minWidth="100sp"
        android:maxWidth="100sp"
        android:textColor="#FFFFFF"
        android:padding="2dp"
        android:maxLines="1"
        android:ellipsize="end"
        />


</LinearLayout>
