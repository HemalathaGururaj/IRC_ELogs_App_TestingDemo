<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.shasratech.s_c_31.Configuration"
    tools:showIn="@layout/app_bar_configuration"
    android:background="@android:color/holo_orange_dark"
    android:weightSum="1"
    android:layout_margin="10sp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="0.08"
        android:paddingTop="10sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.08"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/TE_Dialog_Close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="#880E4F"
                    android:onClick="onTE_Dialog_Cancel_Clicked"
                    android:text="Close"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="normal|bold" />

                <Button
                    android:id="@+id/TE_Configuration_Save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="#004D40"
                    android:onClick="onTE_Dialog_Save_Clicked"
                    android:text="Save"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="normal|bold" />
            </LinearLayout>

            <Spinner
                android:id="@+id/AppNameSpinner"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="5dip"
                android:layout_marginRight="20dip"
                android:layout_marginBottom="4dip"
                android:layout_weight="0.08"
                android:background="#79FFB8"
                android:fontFamily="sans-serif-condensed"
                android:foregroundGravity="center"
                android:gravity="center"
                android:hint="App_Name"
                android:inputType="none"
                android:padding="5dp"
                android:shadowColor="@color/colorAccent"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="normal|bold" />


            <EditText
                android:id="@+id/ET_FB_App_Customer"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="5dip"
                android:layout_marginRight="20dip"
                android:layout_marginBottom="4dip"
                android:layout_weight="0.08"
                android:background="#795548"
                android:fontFamily="sans-serif-condensed"
                android:foregroundGravity="center"
                android:gravity="center"
                android:hint="FB App Customer"
                android:inputType="none"
                android:padding="5dp"
                android:shadowColor="@color/colorAccent"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/ET_FB_App_MobileName"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="5dip"
                android:layout_marginRight="20dip"
                android:layout_marginBottom="4dip"
                android:layout_weight="0.08"
                android:background="#795548"
                android:fontFamily="sans-serif-condensed"
                android:foregroundGravity="center"
                android:gravity="center"
                android:hint="Mobile User Name"
                android:inputType="none"
                android:padding="5dp"
                android:shadowColor="@color/colorAccent"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/ET_FB_User_Name"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="5dip"
                android:layout_marginRight="20dip"
                android:layout_marginBottom="4dip"
                android:layout_weight="0.08"
                android:background="#795548"
                android:fontFamily="sans-serif-condensed"
                android:foregroundGravity="center"
                android:gravity="center"
                android:hint="FB User Email"
                android:inputType="none|textEmailAddress"
                android:padding="5dp"
                android:shadowColor="@color/colorAccent"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/ET_FB_Password"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="5dip"
                android:layout_marginRight="20dip"
                android:layout_marginBottom="4dip"
                android:layout_weight="0.08"
                android:background="#795548"
                android:fontFamily="sans-serif-condensed"
                android:foregroundGravity="center"
                android:gravity="center"
                android:hint="FB User PassWord"
                android:inputType="none"
                android:padding="5dp"
                android:shadowColor="@color/colorAccent"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/ET_IMEI_Number"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="5dip"
                android:layout_marginRight="20dip"
                android:layout_marginBottom="4dip"
                android:layout_weight="0.08"
                android:background="#795548"
                android:fontFamily="sans-serif-condensed"
                android:foregroundGravity="center"
                android:gravity="center"
                android:hint="IMEI Number"
                android:inputType="none"
                android:padding="5dp"
                android:shadowColor="@color/colorAccent"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="normal|bold" />


            <Switch
                android:id="@+id/CBx_Start_App_Install_from_Beginning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:text="Start App Installation from Beginning"
                android:textSize="24sp" />
            <CheckBox
                android:id="@+id/CBx_AutoSaveTrans_Sound_Notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:text="Auto Save Trans Audio Notify"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/CBx_Trans_Sound_Notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:text="Trans Audio Notify"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/CBx_MTrans_Sound_Notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:text="MTrans Audio Notify"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/CBx_CR_Sound_Notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:text="Custom Rate Audio Notify"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/CBx_Inventory_Sound_Notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:text="Inventory Audio Notify"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/CBx_Person_Sound_Notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:text="Person Audio Notify"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/CBx_Material_Sound_Notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:text="Material Audio Notify"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/CBx_Vehicle_Sound_Notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:text="Vehicle Audio Notify"
                android:textSize="24sp" />


            <CheckBox
                android:id="@+id/CBx_IRC_ELogs_Sound_Notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:text="IRC_ELogs Audio Notify"
                android:textSize="24sp" />

            <CheckBox
                android:id="@+id/CBx_HomeShed_Sound_Notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:text="HomeShed Audio Notify"
                android:textSize="24sp" />


            <CheckBox
                android:id="@+id/CBx_Location_Sound_Notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:text="Location Audio Notify"
                android:textSize="24sp" />


            <CheckBox
                android:id="@+id/CBx_TrainDetails_Sound_Notify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:text="TrainDetails Audio Notify"
                android:textSize="24sp" />



        </LinearLayout>
    </ScrollView>
</FrameLayout>
